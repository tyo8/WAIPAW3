#!/bin/sh
#SBATCH -J submit_pfm
#SBATCH -o /scratch/tyoeasley/WAPIAW3/brainrep_data/PROFUMO_data/logs/submit_post_pfm.out
#SBATCH -e /scratch/tyoeasley/WAPIAW3/brainrep_data/PROFUMO_data/logs/submit_post_pfm.err
#SBATCH -N 1
#SBATCH -n 1
#SBATCH --mem 2G
#SBATCH -t 23:55:00

# constants
base_dir="/scratch/tyoeasley/WAPIAW3"
PROFUMO_dir="${base_dir}/brainrep_data/PROFUMO_data"
script_fpath="${base_dir}/job_submission_portal/extraction/submit_postPROFUMO_sbatch.sh"

# data parameters
dimlist="${PROFUMO_dir}/dimlist.txt"
# subj_group_flist="${base_dir}/subject_lists/lists_of_groups/code_disease_groups.txt"
subj_group_flist="${base_dir}/subject_lists/lists_of_groups/one_pass_profumo_list.txt"
