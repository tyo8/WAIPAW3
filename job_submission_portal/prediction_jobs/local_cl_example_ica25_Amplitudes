#!/bin/sh

# constants
classifier="/home/tyo/Documents/Personomics_Lab/Experiments/WAPIAW3/classification_model/classify_patients.py"
patient_eid_dir="/home/tyo/Documents/Personomics_Lab/Experiments/WAPIAW3/subject_lists/patient_eid"

# input parameters
subj_list="/home/tyo/Documents/Personomics_Lab/Experiments/WAPIAW3/subject_lists/combined_subj_eid/example.csv"
datapath_type="/home/tyo/Documents/Personomics_Lab/Experiments/WAPIAW3/brainrep_data/ICA_data/dual_regression/example/ica25/Amplitudes/sub-%s.csv"
outpath_type="/home/tyo/Documents/Personomics_Lab/Experiments/WAPIAW3/prediction_outputs/%s_%s_%s.csv"

# resource & computation parameters
n_jobs=2		# number of cores requested by process
rng_seed=0		# random seed state integer

# (bagged) classifier parameters
folds=2			# number of folds during gridsearch hyperparameter validation
n_splits=2		# number of random train/validation splits within training data=number of models learned
n_estimators=250	# number of trees in random forest
loss_criterion='gini'	# minimized objective function

python ${classifier} -l ${subj_list} -f ${datapath_type} -o ${outpath_type} -p ${patient_eid_dir} \
	-n ${n_jobs} -R ${rng_seed} \
	-k ${folds} -s ${n_splits} -e ${n_estimators} -L ${loss_criterion} -v
